{
  "name": "simple-php-framework",
  "scripts": {
    "dev": "npx parcel build --no-optimize",
    "watch": "npx parcel watch",
    "prod": "npx parcel build --no-cache"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.9.3",
    "parcel": "^2.9.3",
    "parcel-resolver-ignore": "^2.1.5",
    "resolve-url-loader": "^3.1.2"
  },
  "targets": {
      "default": {
        "sourceMap": false,
        "distDir": "./public/assets"
      }
    },
    "source": [
      "resources/js/app.ts",
      "resources/css/app.scss"
    ],
    "parcelIgnore": [
      "assets/.+"
    ]
}
